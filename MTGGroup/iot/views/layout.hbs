  <body>
  <section id="container" >

{{#if login}}
      <!-- **********************************************************************************************************************************************************
      TOP BAR CONTENT & NOTIFICATIONS
      *********************************************************************************************************************************************************** -->
      <!--header start-->
      <header class="header black-bg">
              <div class="sidebar-toggle-box">
                  <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              </div>
            <!--logo start-->
            <a href="/" class="logo"><b>{{app.name}}</b></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu">
                    <!-- settings start -->
                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="index.html#">
                            <i class="fa fa-tasks"></i>
                            {{#if alers}}
                              <span class="badge bg-theme">{{alerts.length}}</span>
                            {{else}}
                              <span class="badge bg-theme">0</span>
                            {{/if}}
                        </a>
                        <ul class="dropdown-menu extended tasks-bar">
                            <div class="notify-arrow notify-arrow-green"></div>
                            <li>
                                <p class="green">New Alerts</p>
                            </li>
                              {{#each alert}}
                                  <li>
                                      <a href="{{this.url}}">
                                          <div class="task-info">
                                              <div class="desc">{{this.desc}}</div>
                                              <div class="percent">{{this.value}}</div>
                                          </div>
                                          <div class="progress progress-striped">
                                              <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="{{this.value}}" aria-valuemin="{{this.min}}" aria-valuemax="{{this.max}}" style="width: {{this.value}}{{this.unit}}">
                                                  <span class="sr-only">{{this.message}}</span>
                                              </div>
                                          </div>
                                      </a>
                                  </li>
                              {{else}}
                                  <li>
                                      <p>No Alerts</p>
                                  </li>
                              {{/each}}



                            <li class="external">
                                <a href="/alerts/">See All Alerts</a>
                            </li>
                        </ul>
                    </li>
                    <!-- settings end -->
                    <!-- inbox dropdown start-->
                    <li id="header_inbox_bar" class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="index.html#">
                            <i class="fa fa-envelope-o"></i>
                            {{#if updates}}
                              <span class="badge bg-theme">{{updates.length}}</span>
                            {{else}}
                              <span class="badge bg-theme">0</span>
                            {{/if}}
                        </a>
                        <ul class="dropdown-menu extended inbox">
                            <div class="notify-arrow notify-arrow-green"></div>
                            <li>
                                <p class="green">New Updates</p>
                            </li>
                            {{#each updates}}
                              <li>
                                  <a href="{{this.url}}">
                                      <span class="photo"><img alt="avatar" src="{{this.photo}}"></span>
                                      <span class="subject">
                                        <span class="from">{{this.from}}</span>
                                        <span class="time">{{this.time}}</span>
                                      </span>
                                      <span class="message">
                                        {{this.message}}
                                      </span>
                                  </a>
                              </li>
                            {{else}}
                            <li>
                                <p>No Updates</p>
                            </li>
                            {{/each}}
                            <li>
                                <a href="/updates/">See All Updates</a>
                            </li>
                        </ul>
                    </li>
                    <!-- inbox dropdown end -->
                </ul>
                <!--  notification end -->
            </div>
            <div class="top-menu">
            	<ul class="nav pull-right top-menu">
                    {{#if login}}
                      <li><a class="logout" href="/logout">Logout</a></li>
                      {{else}}
                      <li><a class="logout" href="/login">Login</a></li>
            	      {{/if}}
              </ul>
            </div>
        </header>
      <!--header end-->

      <!-- **********************************************************************************************************************************************************
      MAIN SIDEBAR MENU
      *********************************************************************************************************************************************************** -->
      <!--sidebar start-->
      <aside>
          <div id="sidebar"  class="nav-collapse ">
              <!-- sidebar menu start-->
              <ul class="sidebar-menu" id="nav-accordion">

              	  <p class="centered"><a href="/profile/{{user.id}}"><img src="{{user.photo}}" class="img-circle" width="60"></a></p>
              	  <h5 class="centered">{{user.name}} {{user.surname}}</h5>

                  {{#each menu}}
                    {{#if this.submenu}}
                      <li class="sub-menu {{this.class}}">
                          <a href="javascript:;" >
                              <i class="fa fa-desktop"></i>
                              <span>{{this.title}}</span>
                          </a>
                          <ul class="sub">
                              {{#each this.submenu}}
                                <li><a href="{{this.url}}">{{this.title}}</a></li>
                              {{/each}}
                          </ul>
                      </li>
                    {{else}}
                      <li class="mt">
                          <a class="{{this.class}}" href="/">
                              <i class="fa fa-dashboard"></i>
                              <span>{{this.title}}</span>
                          </a>
                      </li>
                    {{/if}}
                  {{/each}}


              </ul>
              <!-- sidebar menu end-->
          </div>
      </aside>
      <!--sidebar end-->

      <!-- **********************************************************************************************************************************************************
      MAIN CONTENT
      *********************************************************************************************************************************************************** -->
      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">

              <div class="row">
                  <div class="col-lg-9 main-chart">
                    {{{body}}}
                  </div><!-- /col-lg-9 END SECTION MIDDLE -->


      <!-- **********************************************************************************************************************************************************
      RIGHT SIDEBAR CONTENT
      *********************************************************************************************************************************************************** -->

                  <div class="col-lg-3 ds">
                    <!--COMPLETED ACTIONS DONUTS CHART-->
        						<h3>NOTIFICATIONS</h3>

                    {{#each notification}}
                      <div class="desc">
                      	<div class="thumb">
                      		<span class="badge bg-theme"><i class="fa fa-{{this.icon}}"></i></span>
                      	</div>
                      	<div class="details">
                      		<p><muted>{{this.time}}</muted><br/>
                      		   <a href="{{this.url}}">{{this.from}}</a> {{this.message}}<br/>
                      		</p>
                      	</div>
                      </div>
                    {{else}}
                      <p>No Notifications</p>
                    {{/each}}

        						<h3>Gateways</h3>

                    {{#each gateways}}
                      <div class="desc">
                      	<div class="thumb">
                      		<img class="img-circle" src="{{this.photo}}" width="35px" height="35px" align="">
                      	</div>
                      	<div class="details">
                      		<p><a href="{{this.url}}">{{this.name}}</a><br/>
                      		   <muted>{{this.status}}</muted>
                      		</p>
                      	</div>
                      </div>
                    {{else}}
                      <p>No Gateways</p>
                    {{/each}}

                  </div><!-- /col-lg-3 -->
              </div><! --/row -->
          </section>
      </section>

      <!--main content end-->
      <!--footer start-->
      <footer class="site-footer">
          <div class="text-center">
              {{copyright}}
          </div>
      </footer>
      <!--footer end-->
  {{else}}
  {{{body}}}
{{/if}}
  </section>
